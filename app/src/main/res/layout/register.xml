<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFEC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardBackgroundColor="#C9CAC3"
        app:cardCornerRadius="30dp">

        <EditText
            android:id="@+id/signUpEmailEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#646464" />

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="145dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#708C70"
            android:text="Sign-Up"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="13dp"
            android:text="Sign-Up"
            android:textColor="#212020"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="35dp"
            android:layout_marginTop="56dp"
            android:text="Already have an account?"
            android:textColor="#212020" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="56dp"
            android:layout_marginRight="60dp"
            android:text="Sign-in"
            android:textColor="#2C4E2C"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/signUpPasswordEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="155dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#646464"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="314dp"
        android:layout_height="254dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Username:&#10; Must be between 5 and 20 characters.&#10; Can contain letters (A-Z, a-z), numbers (0-9), and underscores (_).&#10; Usernames cannot contain spaces.&#10; Avoid symbols like @, #, $, %, etc. The username must be unique (not already taken).&#10; &#10; Password:&#10; Must be at least 8-16 characters long.&#10; Must include at least one uppercase (A-Z) and one lowercase (a-z) letter.&#10; Must contain at least one digit (0-9).&#10; Must include at least one special character (@, #, $, %, &amp;, etc.).&#10;"
        android:visibility="visible" />

</LinearLayout>