<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/startView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFEC"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-45dp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        app:srcCompat="@drawable/savinggreen" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-140dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:visibility="visible"
        app:srcCompat="@drawable/group_9" />

    <Button
        android:id="@+id/startSignUpBtn"
        android:layout_width="311dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#708C70"
        android:text="Sign-Up"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/startLogInBtn"
        android:layout_width="311dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#737373"
        android:text="Log In"
        android:textSize="20sp"
        android:visibility="visible" />

</LinearLayout>