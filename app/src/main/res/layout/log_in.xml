<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logInView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFEC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:cardBackgroundColor="#C9CAC3"
        app:cardCornerRadius="30dp">

        <Button
            android:id="@+id/logInBtn"
            android:layout_width="145dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#708C70"
            android:text="Log In"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="13dp"
            android:text="Log In"
            android:textColor="#212020"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="50dp"
            android:layout_marginTop="56dp"
            android:text="Don't have an account?"
            android:textColor="#212020" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="56dp"
            android:layout_marginRight="60dp"
            android:text="Sign-up"
            android:textColor="#2C4E2C"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/logInPasswordEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="155dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#646464"
            android:visibility="visible" />

        <EditText
            android:id="@+id/logInEmailEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#646464" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="205dp"
            android:text="Forgot Password?"
            android:textColor="#2C4E2C"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>
</LinearLayout>